<header class="navbar navbar-default" role="navigation" style="margin-bottom:0;">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'VinCompare', root_path, class: 'navbar-brand' %>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'About', page_path('about') %></li>
        <% if logged_in? %>
          <li>Welcome <%= current_user.username %></li>
          <li><%= button_to 'Log Out', session_url %></li>
        <% else %>
          <li><%= link_to 'Sign Up', new_user_url %></li>
          <li><%= link_to 'Log In', new_session_url %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>